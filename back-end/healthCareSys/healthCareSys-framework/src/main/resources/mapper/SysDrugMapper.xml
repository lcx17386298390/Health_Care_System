<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.acm.mapper.DrugMapper">

    <resultMap id="BaseResultMap" type="com.acm.entity.Drug">
            <id property="id" column="id" jdbcType="VARCHAR"/>
            <result property="drugName" column="drug_name" jdbcType="VARCHAR"/>
            <result property="drugPrice" column="drug_price" jdbcType="DECIMAL"/>
            <result property="drugNums" column="drug_nums" jdbcType="INTEGER"/>
            <result property="drugUsage" column="drug_usage" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,drug_name,drug_price,
        drug_nums,drug_usage
    </sql>

        <select id="selectList" resultMap="BaseResultMap">
            SELECT * FROM drugs
            WHERE usage = #{drugUsage}
        </select>


</mapper>
